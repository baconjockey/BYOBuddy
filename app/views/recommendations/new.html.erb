<!-- If I want to turn each category into a column at the top of the page, is there a way to do so without searching by category name 
and giving each a div?-->


<%= form_tag '/recommendations/create' do %>
  <% Category.all.each do |category| %>
	  <h3><%= category.name %></h3>
	  <ul>
	   <% category.pairing_descriptors.each do |descriptor| %>
	     <li><%= check_box_tag 'pairing_descriptors[]', descriptor.id  %> <%= descriptor.name %></li>
	   <% end %>
	  </ul>
  <% end %>
  <%= submit_tag 'Beer Me!' %>
<% end %>
